---
import Layout from "../layouts/Layout.astro";

import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";

import GitHubIcon from "../icons/GitHub.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import CvIcon from "../icons/Cv.astro";
import Briefcase from "../icons/Briefcase.astro";
import Code from "../icons/Code.astro";
import ProfileCheck from "../icons/ProfileCheck.astro";
import TitleSection from "@/components/TitleSection.astro";
---

<Layout
  title="Francisco Burgoa - Desarrollador y Programador Web"
  description="Contratame para tu próximo proyecto. Soy un desarrollador web full stack con más de 2 años de experiencia. Trabajo con tecnologías como JavaScript, React, Node.js, Express, PostgreSQL, entre otras. También tengo experiencia en diseño web y SEO. Me encanta aprender y siempre estoy buscando nuevos desafíos. Si estás interesado en trabajar conmigo, no dudes en contactarme."
>
  <main class="">
    <SectionContainer class="pt-28 pb-10 md:py-44 md:px-0 px-4">
      <div class="flex w--full justify-center md:justify-start">
        <img
          class="rounded-full w-40 h-40 md:w-20 md:h-20 md:mb-4 mb-8"
          src="foto-perfil.jpeg"
          alt="foto de perfil"
        />
      </div>
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-5 lg:pb-8 md:justify-start justify-center"
      >
        Hola, soy Francisco
        <a
          href="https://www.linkedin.com/in/franciscoburgoa/"
          target="_blank"
          rel="noopener"
          class="flex items-center hover:scale-105 transition"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-yellow-200/90"> Desarrollador Web Full Stack.</span>
        <span class="text-blue-200/90"> De San Juan, Argentina.</span>
        <span class="opacity-85"> +1 años de experiencia.</span>
      </h2>

      <nav
        class="flex justify-center md:justify-start gap-6 md:gap-3 mt-8 flex-wrap"
      >
        <SocialPill href="https://www.linkedin.com/in/franciscoburgoa/">
          <LinkedInIcon class="size-6 md:size-6" />
          <span class="hidden md:flex">LinkedIn</span>
        </SocialPill>
        <SocialPill href="https://github.com/Francisco-B07">
          <GitHubIcon class="size-8 md:size-6" />
          <span class="hidden md:flex"> GitHub </span>
        </SocialPill>
        <SocialPill href="mailto:franciscojburgoa@gmail.com">
          <MailIcon class="size-8 md:size-6" />
          <span class="hidden md:flex"> Email </span>
        </SocialPill>
        <SocialPill
          download="CV Burgoa Francisco"
          href="/CV Burgoa Francisco.pdf"
        >
          <CvIcon class="size-8 md:size-6" />
          <span class="hidden md:flex"> CV </span>
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia" class="md:px-0 px-4">
      <TitleSection>
        <Briefcase class="size-7" /> Experiencia laboral
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos" class="md:px-0 px-4">
      <TitleSection>
        <Code class="size-7" /> Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi" class="md:px-0 px-4">
      <TitleSection>
        <ProfileCheck class="size-7" /> Sobre mi
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
